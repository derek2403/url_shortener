<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold mb-8">Your Shortened URLs</h1>

  <div class="space-y-4">
    <% @urls.each do |url| %>
      <div class="bg-white shadow rounded-lg p-6">
        <h2 class="text-xl font-semibold"><%= url.title %></h2>
        <div class="mt-2 text-gray-600">
          <p>Original URL: <%= link_to url.target_url, url.target_url, target: "_blank", class: "text-blue-600 hover:underline" %></p>
          <p>Short URL: <%= link_to visit_url(url.short_path), visit_url(url.short_path), target: "_blank", class: "text-blue-600 hover:underline" %></p>
        </div>
        <%= link_to "View Statistics", url_path(url.short_path), class: "mt-4 inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-indigo-700 bg-indigo-100 hover:bg-indigo-200" %>
      </div>
    <% end %>
  </div>
</div> 