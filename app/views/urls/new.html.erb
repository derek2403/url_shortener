<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold mb-8">URL Shortener</h1>

  <%= form_with(model: @url, url: urls_path, local: true, class: "space-y-4") do |f| %>
    <div>
      <%= f.label :target_url, "Enter URL to shorten:", class: "block text-sm font-medium text-gray-700" %>
      <%= f.url_field :target_url, required: true, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
    </div>

    <%= f.submit "Shorten URL", class: "inline-flex justify-center rounded-md border border-transparent bg-indigo-600 py-2 px-4 text-sm font-medium text-white shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2" %>
  <% end %>
</div> 