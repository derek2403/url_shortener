<!DOCTYPE html>
<html>
  <head>
    <title>URL Shortener</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "application" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <nav class="navbar">
      <div class="nav-brand">URL Shortener</div>
      <div class="nav-links">
        <%= link_to "New URL", new_url_path, class: "nav-link" %>
        <%= link_to "All URLs", urls_path, class: "nav-link" %>
      </div>
    </nav>

    <main class="content">
      <% if notice %>
        <div class="notice"><%= notice %></div>
      <% end %>
      
      <% if alert %>
        <div class="alert"><%= alert %></div>
      <% end %>

      <%= yield %>
    </main>
  </body>
</html>
